<html lang="en"><head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>login</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="css\styleregister.css">
</head>
<body>
    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                        <img src="img\log.png" class="image">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <form action="/login" method="post">
                <div class="card2 card border-0 px-4 py-5">
                    
                    <div class="row mb-4 px-3" dir="rtl">
                        <h6 class="mb-0 mr-4 mt-2">تسجيل عبر  </h6>
                        <img class="gmail text-center mr-3" src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" alt="">
                    </div>
                    <div class="row px-3 mb-4" dir="rtl">
                        <div class="line"></div>
                        <small class="or text-center">أو</small>
                        <div class="line"></div>
                    </div>
                    <!--هنا فيه مشكله -->
                    <% if (messages.error) { %>
                        <div class="alert alert-danger">
                            <strong> <%= messages.error %></strong>
    
                        </div>

                   <% }%>

                    <div class="row px-3" dir="rtl">
                        <label class="mb-1"><h6 class="mb-0 text-sm">البريد الالكتروني</h6></label>
                        <input class="mb-4" type="text" name="email" placeholder="البريد الالكتروني" dir="rtl">
                    </div>
                    <div class="row px-3" dir="rtl">
                        <label class="mb-1"><h6 class="ml-auto mb-0 text-sm">كلمة المرور</h6></label>
                        <input type="password" name="password" placeholder="كلمة المرور" dir="rtl">
                    </div>
                    <div class="row px-3 mb-4">
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input id="chk1" type="checkbox" name="chk" class="custom-control-input"> 
                            <label for="chk1" class="custom-control-label text-sm">تذكرني</label>
                        </div>
                        <a href="#" class="ml-auto mb-0 text-sm" dir="ltr">نسيت كلمة المرور ؟</a>
                    </div>
                    <div class="row mb-3 px-3" dir="rtl">
                        <button type="submit" class="btn btn-blue text-center">تسجيل الدخول</button>
                    </div>
                    <div class="row mb-4 px-3" dir="rtl">
                        <small class="font-weight-bold">ليس لديك حساب ؟<a href="/register" class="text-danger "> إنشاء حساب جديد </a></small>
                    </div>
                </div>
            </form>
            </div>
        </div>
        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">Copyright © 2019. All rights reserved.</small>
                <div class="social-contact ml-4 ml-sm-auto">
                    <span class="fa fa-facebook mr-4 text-sm"></span>
                    <span class="fa fa-google-plus mr-4 text-sm"></span>
                    <span class="fa fa-linkedin mr-4 text-sm"></span>
                    <span class="fa fa-twitter mr-4 mr-sm-5 text-sm"></span>
                </div>
            </div>
        </div>
    </div>
</div>

</body></html>